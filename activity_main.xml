<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_margin="20dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:src="@drawable/saree" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:gravity="center"
        tools:ignore="HardcodedText"
        android:paddingTop="20sp"
        android:text="Subhangee"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10sp"
        tools:ignore="HardcodedText"
        android:paddingTop="15sp"
        android:text="Computer Science Engineer"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnedu"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize"
            android:layout_weight="1"
            android:text="Education" />

        <Button
            android:id="@+id/btnskills"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:text="Skills" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnpro"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:text="Projects" />

        <Button
            android:id="@+id/btnach"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:text="Achievements" />

    </LinearLayout>
</LinearLayout>