<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectsActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:text="Projects"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:paddingBottom="40dp"
        />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:text=" Child Healthcare Management App"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        tools:ignore="HardcodedText"
        android:layout_height="wrap_content"
        android:text=" Built a React app with MongoDB for managing child
 healthcare records and vaccination schedules.
 Ensured secure data handling and real-time updates
 for efficient healthcare tracking."
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:paddingTop="15dp"
        android:paddingBottom="35dp"
        />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:text="Bokeh Effect Generation"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:text="Created a Bokeh effect generation tool using a CNN
 model in Python to enhance image aesthetics with
 realistic background blurring."
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:paddingTop="15dp"
        android:paddingBottom="35dp"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        tools:ignore="HardcodedText"
        android:layout_height="wrap_content"
        android:text="Image Captioning"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:text="Created an image captioning system using deep
 learning techniques to automatically generate
 descriptive captions for images."
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:paddingTop="15dp"
        android:paddingBottom="35dp"
        />
</LinearLayout>